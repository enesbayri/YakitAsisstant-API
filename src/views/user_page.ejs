<% if (typeof msgDanger!='undefined') { %>
  <div class="alert alert-success">   <i class="fas fa-info"></i>   <%-msgDanger %>

          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Kapat</span></button>
  </div>
<% } %>

<section class="section header">
    <div class="container">
      <h1 class="title">
        <img class="title-img" src="/images/icons/mainIcon.png">Yakıt Asistan
      </h1>
      <p class="subtitle">
        <strong>Yakıt Asistan</strong> uygulamasına hoşgeldin!!
      </p>
    </div>
    <div class="columns">
      <div class="column is-four-fifths"></div>
      <div class="column"><div class="docs">  <a href="/documentation"><button class="button is-warning"><i class="fa-solid fa-file-doc"></i>DOCS</button></a></div></div>
      <div class="column"><div class="logout">  <a href="/logout"><button class="button is-danger"><i class="fa fa-sign-out logout-button"></i></button></a></div></div>
    </div>
    
    
    
    <hr class="header-hr">
</section>


<section class="section" id="main-content">
  <br><br>
  <div class="card" id="main-card">
    <div class="card-header pt-2">
      <p class="title ml-5">
        <img class="title-img" src="/images/icons/mainIcon.png">  <%=user.name %> <%=user.surname %> <p class="subtitle has-text-centered mt-2 ml-2"></p>
      </p>
    </div>
    <div class="card-content">
      <p class="subtitle mt-2 ml-2"> API Keyiniz :</p>
      <pre><code class="language-javascript" id="apikey"><%=user.apikey %></code></pre>
      <div class="div">
        <button class="button is-info" id="copy-button" onclick="copyContent()">Keyi kopyala</button>
      </div>
      <br>
      <p class="subtitle mt-2 ml-2"> Kalan API kullanım hakkınız :</p>
          <p class="title mt-2 ml-2" id="key-rights">
            <strong><%=user.apiRights %></strong>
          </p>
    </div>
    <footer class="card-footer">
      <a href="/update-api-rights" class="card-footer-item">API kullanım hakkı talep et</a>
    </footer>
  </div>
  
</section>
